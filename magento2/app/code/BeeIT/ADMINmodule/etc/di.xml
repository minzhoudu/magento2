<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="BeeIT\ADMINmodule\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="BeeIT\ADMINmodule\Logger\CustomLogger">
        <arguments>
            <argument name="name" xsi:type="string">beeit_todocrud</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">BeeIT\ADMINmodule\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
