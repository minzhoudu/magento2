<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="custom_admin_tab" sortOrder="120" translate="label">
            <label>Bee IT</label>
        </tab>
        <section id="todo_item" translate="label" sortOrder="100" showInWebsite="1" showInStore="1" showInDefault="1">
            <label>Todo Item</label>
            <tab>custom_admin_tab</tab>
            <resource>BeeIT_ADMINmodule::custommenu_field</resource>

            <group id="general_settings_group" showInWebsite="1" showInStore="1" showInDefault="1">
                <label>General Settings</label>
                <comment>Some short description</comment>

                <field id="import_url" translate="label" type="text" sortOrder="100" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Import Url</label>
                    <comment>Only valid URLs are accepted</comment>
                    <validate>validate-url</validate>
                </field>

                <field id="update_existing_checkbox" translate="label" type="select" sortOrder="100" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Update existing</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="custom_button" translate="label" type="button" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Action</label>
                    <frontend_model>BeeIT\ADMINmodule\Block\Adminhtml\System\Config\Button</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
