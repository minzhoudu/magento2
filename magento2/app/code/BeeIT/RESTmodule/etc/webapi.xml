<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/custom/endpoint/">
        <service class="BeeIT\RESTmodule\Api\CustomApiInterface" method="getResponse"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crud/readAll/">
        <service class="BeeIT\RESTmodule\Api\TodoItemRepositoryInterface" method="getAll"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crud/read/">
        <service class="BeeIT\RESTmodule\Api\TodoItemRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crud/create/">
        <service class="BeeIT\RESTmodule\Api\TodoItemRepositoryInterface" method="create"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crud/update/">
        <service class="BeeIT\RESTmodule\Api\TodoItemRepositoryInterface" method="update"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/crud/delete/">
        <service class="BeeIT\RESTmodule\Api\TodoItemRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
